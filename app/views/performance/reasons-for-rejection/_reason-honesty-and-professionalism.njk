{% set sectionTitle = "honesty-and-professionalism" | getRejectionCategoryLabel %}

<h2 class="govuk-heading-m govuk-!-margin-top-7">
  <a class="govuk-link" href="/performance/reasons-for-rejection/honesty-and-professionalism">
    {{ sectionTitle | capitalize }}
  </a>
</h2>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-half">
    {{ appMetric({
      metric: {
        text: counts['honesty-and-professionalism'].percent | numeral('0.00') + "%"
      },
      label: {
        html: counts['honesty-and-professionalism'].total | numeral('0,0') + ' of ' + counts.total | numeral('0,0') + ' application choices <span class="govuk-visually-hidden"> for ' + sectionTitle | lower + '</span>'
      },
      classes: "app-metric--blue"
    }) }}
  </div>
  <div class="govuk-grid-column-one-quarter">
    {{ appMetric({
      metric: {
        text: counts['honesty-and-professionalism'].total | numeral('0,0')
      },
      label: {
        html: 'rejected in total <span class="govuk-visually-hidden"> for ' + sectionTitle | lower + '</span>'
      }
    }) }}
  </div>
  <div class="govuk-grid-column-one-quarter">
    {{ appMetric({
      metric: {
        text: "1"
      },
      label: {
        html: 'rejected in September <span class="govuk-visually-hidden"> for ' + sectionTitle | lower + '</span>'
      }
    }) }}
  </div>
</div>

<table class="govuk-table govuk-!-margin-top-5">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header" width="40%">Reason</th>
      <th scope="col" class="govuk-table__header govuk-table__header--numeric" width="10%">Percentage of choices</th>
      <th scope="col" class="govuk-table__header govuk-table__header--numeric" width="25%">Total</th>
      <th scope="col" class="govuk-table__header govuk-table__header--numeric" width="25%">This month</th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    <tr class="govuk-table__row">
      <th scope="row" class="govuk-table__header">
        <a class="govuk-link" href="/performance/reasons-for-rejection/honesty-and-professionalism/inaccurate-information">Innacurate or false information in the application</a>
      </th>
      <td class="govuk-table__cell govuk-table__cell--numeric">
        0.02%
      </td>
      <td class="govuk-table__cell govuk-table__cell--numeric">
        1
      </td>
      <td class="govuk-table__cell govuk-table__cell--numeric">
        0
      </td>
    </tr>
    <tr class="govuk-table__row">
      <th scope="row" class="govuk-table__header">
        <a class="govuk-link" href="/performance/reasons-for-rejection/honesty-and-professionalism/plagiarism">Evidence of plagiarism in the application</a>
      </th>
      <td class="govuk-table__cell govuk-table__cell--numeric">
        0.02%
      </td>
      <td class="govuk-table__cell govuk-table__cell--numeric">
        1
      </td>
      <td class="govuk-table__cell govuk-table__cell--numeric">
        0
      </td>
    </tr>
    <tr class="govuk-table__row">
      <th scope="row" class="govuk-table__header">
        <a class="govuk-link" href="/performance/reasons-for-rejection/honesty-and-professionalism/references">References did not support the application</a>
      </th>
      <td class="govuk-table__cell govuk-table__cell--numeric">
        0.07%
      </td>
      <td class="govuk-table__cell govuk-table__cell--numeric">
        3
      </td>
      <td class="govuk-table__cell govuk-table__cell--numeric">
        1
      </td>
    </tr>
    <tr class="govuk-table__row">
      <th scope="row" class="govuk-table__header">
        <a class="govuk-link" href="/performance/reasons-for-rejection/honesty-and-professionalism/other">Other</a>
      </th>
      <td class="govuk-table__cell govuk-table__cell--numeric">
        0.39%
      </td>
      <td class="govuk-table__cell govuk-table__cell--numeric">
        16
      </td>
      <td class="govuk-table__cell govuk-table__cell--numeric">
        0
      </td>
    </tr>
  </tbody>
</table>
